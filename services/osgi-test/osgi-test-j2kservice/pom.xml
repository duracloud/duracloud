<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.duracloud.services.osgi-test</groupId>
  <artifactId>osgi-test-j2kservice</artifactId>
  <version>3.0.0-SNAPSHOT</version>
  <name>DuraCloud J2K OSGi Service Tests</name>
  <url>http://duracloud.org</url>
  <packaging>jar</packaging>

  <parent>
    <artifactId>osgi-test</artifactId>
    <groupId>org.duracloud.services</groupId>
    <version>3.0.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>

          <execution>
            <id>copy-j2kservice</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.duracloud.services</groupId>
                  <artifactId>j2kservice</artifactId>
                  <version>${project.version}</version>
                  <type>jar</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>src/test/resources</outputDirectory>
            </configuration>
          </execution>

        </executions>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.4.3</version>
        <executions>

          <execution>
            <id>copy-resources-j2k</id>
            <phase>process-test-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>src/test/resources</outputDirectory>
              <resources>
                <resource>
                  <directory>../../../resources/unit-test</directory>
                  <filtering>false</filtering>
                  <includes>
                    <include>apache-tomcat-6.0.20.zip</include>
                    <include>adore-djatoka-1.1.zip</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>

        </executions>
      </plugin>

    </plugins>

  </build>

  <dependencies>
  
    <!-- internal projects -->
    <dependency>
      <groupId>org.duracloud.services</groupId>
      <artifactId>computeservice</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.duracloud.services</groupId>
      <artifactId>servicescommon</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    
    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>common</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.duracloud.services</groupId>
      <artifactId>webapputilservice</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.duracloud.services</groupId>
      <artifactId>j2kservice</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>

    
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>com.springsource.org.apache.commons.io</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>com.springsource.org.apache.commons.httpclient</artifactId>
      <scope>provided</scope>
    </dependency>

  </dependencies>

</project>
