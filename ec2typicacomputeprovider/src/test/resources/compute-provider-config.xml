<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="ec2ServiceProvider" class="org.duracloud.ec2serviceprovider.mgmt.EC2ServiceProviderImpl">
        <property name="props" ref="ec2ServiceProperties" />
        <property name="accessKeyId" value="andrew-access-key-id"/>
        <property name="secretAccessKey" value="andrew-secret-access-key"/>
    </bean>
    
    <bean id="ec2ServiceProperties" class="org.duracloud.ec2serviceprovider.mgmt.EC2ServiceProperties" />
 
</beans>