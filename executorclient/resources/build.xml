<project name="ExampleExecutorClient" default="compile" basedir=".">
  <description>Builds the example executor client</description>

  <property name="src" location="."/>
  <property name="lib" location="lib"/>

  <target name="compile" description="compile the source">
    <javac srcdir="${src}" destdir="${src}" includeantruntime="false">
      <classpath>
        <fileset dir="${lib}"/>
      </classpath>
    </javac>
  </target>

  <target name="clean" description="clean up">
    <delete>
      <fileset dir="." includes="*.class"/>
    </delete>
  </target>

  <target name="run" description="run the example">
    <java classname="ExampleExecutorClient" fork="true">
      <classpath>
        <pathelement location="."/>
        <fileset dir="${lib}"/>
      </classpath>
    </java>
  </target>
</project>
