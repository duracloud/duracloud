<project name="ExampleClient" default="compile" basedir=".">
    <description>Builds the example store client</description>
  
    <property name="src" location="."/>
    <property name="lib" location="lib"/>

    <target name="compile" description="compile the source">
        <javac srcdir="${src}" destdir="${src}">
            <classpath>
                <fileset dir="${lib}"/> 
            </classpath>
        </javac>
    </target>

    <target name="clean" description="clean up">
        <delete>
            <fileset dir="." includes="*.class"/> 
        </delete>
    </target>
  
    <target name="run" description="run the example">
        <java classname="ExampleClient">
            <classpath>
                <pathelement location="."/>
                <fileset dir="${lib}"/> 
            </classpath>
        </java>
    </target>
</project>
