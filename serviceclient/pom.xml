<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.duracloud</groupId>
  <artifactId>serviceclient</artifactId>
  <packaging>bundle</packaging>
  <version>0.5.0-SNAPSHOT</version>
  <name>ServiceClient</name>

  <parent>
    <artifactId>duracloud</artifactId>
    <groupId>org.duracloud</groupId>
    <version>0.5.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <executions>
          <execution>
            <id>integrationtest</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>


  <profiles>

    <profile>
      <id>profile-servicetest</id>
      <build>
        <plugins>

          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <executions>
              <execution>
                <id>integrationtest</id>
                <phase>integration-test</phase>
                <goals>
                  <goal>test</goal>
                </goals>

                <configuration>
                  <trimStackTrace>false</trimStackTrace>
                  <excludes>
                    <exclude>${unitTests}</exclude>
                    <exclude>${instrumentedTests}</exclude>
                  </excludes>
                  <includes>
                    <include>${integrationTests}</include>
                  </includes>
                </configuration>

              </execution>
            </executions>
          </plugin>

        </plugins>
      </build>
    </profile>

  </profiles>


  <dependencies>
  
    <!-- internal projects -->
    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>common</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>serviceconfig</artifactId>
      <version>${project.version}</version>
    </dependency>
        
    <!-- for JDOM -->
    <dependency>
        <groupId>org.jdom</groupId>
        <artifactId>jdom</artifactId>
    </dependency>
    
    <!-- for HttpClient -->
    <dependency>
      <groupId>commons-httpclient</groupId>
      <artifactId>commons-httpclient</artifactId>
    </dependency>    

    <!-- test -->
    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>unit-test-db</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>  
      <artifactId>com.springsource.org.apache.commons.io</artifactId>  
      <scope>test</scope>
    </dependency>

    <dependency>  
      <groupId>com.thoughtworks.xstream</groupId>  
      <artifactId>com.springsource.com.thoughtworks.xstream</artifactId>
      <scope>provided</scope>
    </dependency>    

     
  </dependencies>
</project>
