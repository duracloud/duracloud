<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.duracloud</groupId>
  <artifactId>reportclient</artifactId>
  <packaging>bundle</packaging>
  <version>3.1.1</version>
  <name>ReportClient</name>

  <parent>
    <artifactId>duracloud</artifactId>
    <groupId>org.duracloud</groupId>
    <version>3.1.1</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <profiles>
    <profile>
      <id>package-client</id>

      <activation>
        <property>
          <name>package</name>
          <value>client</value>
        </property>
      </activation>

      <build>

        <plugins>

          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>2.6.1</version>
            <executions>
              <execution>
                <goals>
                  <goal>jar</goal>
                </goals>
                <configuration>
                  <outputDirectory>${project.build.directory}/javadoc</outputDirectory>
                  <jarOutputDirectory>${project.build.directory}</jarOutputDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <phase>install</phase>
                <goals>
                  <goal>single</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <finalName>report-client</finalName>
              <appendAssemblyId>false</appendAssemblyId>
            </configuration>
          </plugin>

        </plugins>

      </build>

      <!--These dependencies are added as 'compile' scope for the assembly plugin-->
      <dependencies>

        <dependency>
          <groupId>org.apache.commons</groupId>
          <artifactId>com.springsource.org.apache.commons.lang</artifactId>
          <scope>compile</scope>
        </dependency>

        <dependency>
          <groupId>xerces</groupId>
          <artifactId>xercesImpl</artifactId>
          <scope>compile</scope>
        </dependency>

        <dependency>
          <groupId>com.thoughtworks.xstream</groupId>
          <artifactId>com.springsource.com.thoughtworks.xstream</artifactId>
          <scope>compile</scope>
        </dependency>

      </dependencies>

    </profile>
  </profiles>

  <dependencies>

    <!-- internal projects -->
    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>common</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
        <groupId>org.duracloud</groupId>
        <artifactId>reportdata</artifactId>
        <version>${project.version}</version>
    </dependency>

    <!-- for HttpClient -->
    <dependency>
      <groupId>commons-httpclient</groupId>
      <artifactId>commons-httpclient</artifactId>
    </dependency>

    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
    </dependency>

    <dependency>
      <groupId>com.thoughtworks.xstream</groupId>
      <artifactId>com.springsource.com.thoughtworks.xstream</artifactId>
      <scope>provided</scope>
    </dependency>

  </dependencies>
</project>
