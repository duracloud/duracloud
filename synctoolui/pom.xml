      <groupId>org.duracloud</groupId>
      <artifactId>jquery-war</artifactId>
      <type>war</type>
      <version>1.7.1</version>
    </dependency>

    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>jquery-ui-war</artifactId>
      <type>war</type>
      <version>1.8.6</version>
    </dependency>

    <dependency>
